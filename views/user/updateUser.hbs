<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

<body>

    <center>
        <h3 id="centerDiv" style="margin-top: 100px">Add User Details</h3>
    </center>
    <label id="successMessage"> {{success}}</label>
    <label id="failureMessage"> {{error}}</label>
    <div class="container" id="FormBox">
        <form method="post" action="/updateUser">

            <div>
                <label for="name"> Id:</label>
                <input type="text" id="pname" name="id" value={{data.id}} readonly>
            </div>
            <div>
                <label for="name"> Name:</label>
                <input type="text" id="pname" name="name" value={{data.name}} required>
            </div>
            <div>
                <label for="dob">Date of Birth:</label>
                <input type="date" id="timestamp" name="dob" value={{data.dob}} required>
            </div>
            {{!-- Address --}}
            <div>
                <label for="address">Address:</label>
                <input type="text" id="addess" name="address" value={{data.address}} required>
            </div>
            <div>
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value={{data.city}} required>
            </div>
            <div>
                <label for="state">State:</label>
                <input type="text" id="state" name="state" value={{data.state}} required>
            </div>
            <div>
                <label for="mobile">Mobile:</label>
                <input type="number" id="mobile" name="mobile" value={{data.mobile}} required>
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value={{data.email}} required>
            </div>
            <div>
                <input type="submit" value="Update">
            </div>
        </form>
    </div>
    <script type="text/javascript" src="../../jquery-1.3.2.min.js"></script>

</body>

</html>